int ledPin[5] = {2,3,4,5,6};

void setup() {
  for(int i=0;i<5;i++) pinMode(ledPin[i], OUTPUT);
}

void loop() {
  int ir = analogRead(A0);

  if (ir < 500) {
    for(int i=0;i<5;i++){
      digitalWrite(ledPin[i], HIGH);
      delay(150);
    }
  } else {
    for(int i=4;i>=0;i--){
      digitalWrite(ledPin[i], LOW);
      delay(150);
    }
  }
}
